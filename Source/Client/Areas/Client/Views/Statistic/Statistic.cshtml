@model List<PostOffice.API.DTOs.MoneyOrder.MoneyOrderBaseDTO>
@{
    ViewData["Title"] = "Statistic";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var pending = PostOffice.API.Data.Enums.TransferStatus.Pending;
    var processing = PostOffice.API.Data.Enums.TransferStatus.Processing;
    var success = PostOffice.API.Data.Enums.TransferStatus.Successfull;
    var failed = PostOffice.API.Data.Enums.TransferStatus.Failed;
}

<style>
    label {
        cursor: pointer;
    }
</style>

<div class="card">
    <div class="card-header">
        <strong>
            Manage bills of lading
        </strong> Details in Required Fields Below
    </div>
    <div class="card-body card-block">
        <form asp-action="Statistic" asp-controller="Statistic" method="post" enctype="multipart/form-data" class="form-horizontal">
            <div class="row">
                <div class="col-6 col-lg-3 col-md-6">
                    <label class="card">
                        <input type="submit" value="all" name="option" class="d-none" />
                        <div class="card-body px-4 py-4-5">
                            <div class="row">
                                <div class="col-md-4 col-lg-12 col-xl-12 col-xxl-5 d-flex justify-content-around ">
                                    <div class="stats-icon purple mb-2 text-center">
                                        <i style="font-size: 30px" class="fa-solid fa-box"></i>
                                    </div>
                                </div>
                                <div class="col-md-8 col-lg-12 col-xl-12 col-xxl-7">
                                    <h6 class="text-muted font-semibold">All</h6>
                                </div>
                            </div>
                        </div>
                    </label>
                </div>
                <div class="col-6 col-lg-3 col-md-6">
                    <label class="card">
                        <input type="submit" value="all" name="option" class="d-none" />
                        <div class="card-body px-4 py-4-5">
                            <div class="row">
                                <div class="col-md-4 col-lg-12 col-xl-12 col-xxl-5 d-flex justify-content-around ">
                                    <div class="stats-icon blue mb-2">
                                        <i style="font-size: 30px" class="fa-solid fa-square-check"></i>
                                    </div>
                                </div>
                                <div class="col-md-8 col-lg-12 col-xl-12 col-xxl-7">
                                    <h6 class="text-muted font-semibold">Successfully</h6>
                                </div>
                            </div>
                        </div>
                    </label>
                </div>
                <div class="col-6 col-lg-3 col-md-6">
                    <label class="card">
                        <input type="submit" value="pending" name="option" class="d-none" />
                        <div class="card-body px-4 py-4-5">
                            <div class="row">
                                <div class="col-md-4 col-lg-12 col-xl-12 col-xxl-5 d-flex justify-content-around ">
                                    <div class="stats-icon green mb-2">
                                        <i style="font-size: 30px" class="fa-solid fa-clock"></i>
                                    </div>
                                </div>
                                <div class="col-md-8 col-lg-12 col-xl-12 col-xxl-7">
                                    <h6 class="text-muted font-semibold">Processing</h6>
                                </div>
                            </div>
                        </div>
                    </label>
                </div>
                <div class="col-6 col-lg-3 col-md-6 pe-auto">
                    <label class="card">
                        <input type="submit" value="cancel" name="option" class="d-none" />
                        <div class="card-body px-4 py-4-5">
                            <div class="row">
                                <div class="col-md-4 col-lg-12 col-xl-12 col-xxl-5 d-flex justify-content-around ">
                                    <div class="stats-icon red mb-2">
                                        <i style="font-size: 30px" class="fa-solid fa-ban"></i>
                                    </div>
                                </div>
                                <div class="col-md-8 col-lg-12 col-xl-12 col-xxl-7">
                                    <h6 class="text-muted font-semibold">Cancel</h6>
                                    <h6 class="font-extrabold mb-0">112</h6>
                                </div>
                            </div>
                        </div>
                    </label>
                </div>
            </div>
        </form>
        <section class="section">
            <div class="card">
                <div class="card-header">Health Policy</div>
                <div class="card-body">

                    <div class="table-responsive">
                        <table class="table" id="table1">
                            <thead>
                                <tr>
                                    <th>Sender_name</th>
                                    <th>Receiver_name</th>
                                    <th>send_date</th>
                                    <th>receiver_date</th>
                                    <th>Total charge</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.sender_name</td>
                                        <td>@item.receiver_name</td>
                                        <td>@item.send_date</td>
                                        <td>@item.receive_date</td>
                                        <td class="total-charge-td-@item.id">
                                            <script>
                                                tch = @(item.total_charge);
                                                document.querySelector('.total-charge-td-' + @item.id).appendChild(document.createTextNode(tch.toLocaleString("vi-VN", { style: "currency", currency: "VND" })));
                                            </script>
                                        </td>
                                        <td>
                                            <span class="badge bg-@(item.transfer_status == processing ? "success" :
                                    (item.transfer_status == pending ? "primary" :
                                    (item.transfer_status == success ? "warning" : "danger")
                                    ))">@item.transfer_status</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>



