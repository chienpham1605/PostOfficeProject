@model PostOffice.API.DTOs.ParcelOrder.ParcelOrderUpdateDTO

@{
    ViewData["Title"] = "Update Parcel Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>General Form</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Parcel Order</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-8">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Edit Parcel Order</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label asp-for="send_date" class="control-label"></label>
                                    <input asp-for="send_date" type="datetime" class="form-control" />
                                    <span asp-validation-for="send_date" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="receive_date" class="control-label"></label>
                                    <input asp-for="receive_date" type="datetime" class="form-control" />
                                    <span asp-validation-for="receive_date" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="order_status" type="text" class="control-label"></label>
                                    <input asp-for="order_status" class="form-control" />
                                    <span asp-validation-for="order_status" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="vpp_value" class="control-label"></label>
                                    <input asp-for="vpp_value" type="number" class="form-control" />
                                    <span asp-validation-for="vpp_value" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="total_charge" class="control-label"></label>
                                    <input asp-for="total_charge" type="number"  class="form-control" />
                                    <span asp-validation-for="total_charge" class="text-danger"></span>
                                </div>                              
                            </div>
                            <!-- /.card-body -->

                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>